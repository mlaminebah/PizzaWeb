DROP TABLE Personne IF EXISTS
DROP TABLE Client IF EXISTS
DROP TABLE Administrateur IF EXISTS
DROP TABLE Pizza IF EXISTS

DROP DATABASE pizza_web IF EXISTS

CREATE DATABASE pizza_web
use pizza_web

--Table Personne
CREATE IF NOT EXISTS TABLE Personne (
      IDPersonne INT NOT NULL,
      Nom VARCHAR(100) NOT NULL,
      Prenom VARCHAR(100) NOT NULL,
      Email VARCHAR(100) NOT NULL,
      Adresse VARCHAR(100),
      PRIMARY KEY (IDPersonne),
      UNIQUE (Email)
);
--Table Client
CREATE IF NOT EXISTS TABLE Client (
      IDClient INT NOT NULL,
      MotDePasse varchar(50) not null,
      IDPersonne INT,
      PRIMARY KEY (IDClient),
      FOREIGN KEY (IDPersonne) REFERENCES Personne(IDPersonne)
);

--Table Administrateur
CREATE IF NOT EXISTS Administrateur (
    IDAdministrateur int not null,
    MotDePasse varchar(100) not null,
    IDPersonne int,
    primary key (IDAdministrateur),
    foreign key (IDPersonne) REFERENCES Personne(IDPersonne)
);
--Table Ingr√©dients
create IF NOT EXISTS table Ingredients (
	IDIngreds int,
	Nom varchar(100) not null,
	primary key (IDIngreds)
)
--Table Pizza
create IF NOT EXISTS table Pizza (
    IDPizza int,
    Nom varchar(100) not null,
    Prix float not null,
    Photo varchar(100),
    Taille varchar(100) not null,
    QteStock int not null,
    primary key (IDPizza),
    foreign key (IDPersonne) REFERENCES Personne(IDPersonne)
)
--Table composition
create IF NOT EXISTS table Composition (
	IDPizza int not null,
	IDIngreds int not null,
	primary key (IDPizza,Ingreds),
	foreign key (IDPizza),
	foreign key (IDIngreds)
)

